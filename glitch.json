{
  "install": "npm install",
  "start": "node start.js",
  "watch": {
    "ignore": [
      "\\.git",
      "node_modules",
      "dist"
    ],
    "install": {
      "include": [
        "^package\\.json$"
      ]
    },
    "restart": {
      "include": [
        "\\.js$",
        "\\.json",
        "start\\.js"
      ]
    },
    "throttle": 1000
  }
}